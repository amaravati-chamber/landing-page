            input.form-control(name='entry.824450753' type='email' placeholder='name@example.com' required='')
            label(for='email') Email Address
          // Phone number input
          .form-floating.mb-3
            input.form-control(name='entry.1966323359' type='tel' placeholder='83745 25370' required='')
